<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="be.kuleuven.dbproject.controller.LoginController" prefHeight="300.0" prefWidth="300.0">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER">
                <Label text="VGHF" style="-fx-text-fill: #4f46e5; -fx-font-weight: bold; -fx-font-size: 40px;"/>
            </HBox>

            <Label text="email:"/>
            <TextField fx:id="emailTxtField"/>
            
            <Label text="wachtwoord:"/>

            <HBox spacing="5">
                <PasswordField fx:id="wachtwoordTxtField"/>
                <ImageView fx:id="eyeImageView" fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <!-- fix icon -->
                        <Image url="@/image/icons8-eye-50.png" />
                    </image>
                </ImageView>
            </HBox>

            <Text fx:id="visableWachtwoordTxt"/>

            <HBox alignment="CENTER" spacing="5">
                <Button fx:id="loginBtn" text="login" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
                <Button fx:id="crtAccountBtn" text="creat account" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </children>
</GridPane>
