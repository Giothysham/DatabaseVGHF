<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane style="-fx-padding: 0 5 10 5;" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.ExtraAddController">
    <children>
        <Label text="stock:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="aantalStock" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="aantal verkocht:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="aantalVerkocht" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="type:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="typeDropDown" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="winkel:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="winkelDropDown" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="uitgever:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ComboBox fx:id="uitgeverIDDropDown" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="kostPrijs:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="kostPijs"  GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="naam:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="naam"  GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="9">
            <Button fx:id="viewExtraPageBtn" style="-fx-background-color: #4f46e5; -fx-text-fill: white;" text="view extra page" />
            <Pane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button fx:id="submitExtraBtn" style="-fx-background-color: #4f46e5; -fx-text-fill: white;" text="submit extra"/>
        </HBox>
    </children>
</GridPane>