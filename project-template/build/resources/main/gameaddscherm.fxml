<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane style="-fx-padding: 0 5 10 5;" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.GameAddController">
    <children>
        <Label text="stock:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="aantalStock" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="aantal uitegeleend:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="aantalUitgeleend" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="console:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="consoleDropDown" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="winkel:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="winkelDropDown" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="genre:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="genreIDDropDown" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="kostPrijs:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="kostPijs"  GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="naam:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="naam"  GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="beschrijving:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextArea fx:id="beschrijving"  GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <HBox alignment="BASELINE_RIGHT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="8">
            <Button fx:id="submitGameBtn" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"  alignment="CENTER" text="submit new game" />
        </HBox>
    </children>
</GridPane>