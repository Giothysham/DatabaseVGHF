<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="parentAnchorPane" style="-fx-padding: 10 5 5 5;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.VerkoopbaarAddController">
    <VBox alignment="center" spacing="10" style="-fx-padding: 10 5 0 5;">
        <HBox spacing="5">
            <Label text="stock:"/>
            <TextField fx:id="aantalStock" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="5">
            <Label text="aantal uitegeleend:"/>
            <TextField fx:id="aantalUitgeleend" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="5" fx:id="consoleHbox">
            <Label text="console:"/>
            <ComboBox fx:id="consoleDropDown"/>
        </HBox>

        <HBox spacing="5">
            <Label text="winkel:"/>
            <ComboBox fx:id="winkelDropDown"/>
        </HBox>

        <HBox spacing="5" fx:id="genreHbox">
            <Label text="genre:"/>
            <ComboBox fx:id="genreIDDropDown"/>
        </HBox>

        <HBox spacing="5" fx:id="typeHbox">
            <Label text="type:" />
            <ComboBox fx:id="typeDropDown"/>
        </HBox>

        <HBox spacing="5">
            <Label text="uitgever:"/>
            <ComboBox fx:id="uitgeverIDDropDown"/>
        </HBox>

        <HBox spacing="5">
            <Label text="kostPrijs:"/>
            <TextField fx:id="kostPijs" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="5">
            <Label text="naam:"/>
            <TextField fx:id="naam" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="5">
            <Label text="beschrijving:" />
            <TextArea fx:id="beschrijving" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox alignment="CENTER">
            <Button fx:id="viewVerkoopbaarPageBtn" style="-fx-background-color: #4f46e5; -fx-text-fill: white;" text="view verkoopvaar page" />
            <Pane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button fx:id="submitVerkoopbaarBtn" style="-fx-background-color: #4f46e5; -fx-text-fill: white;" text="submit verkoopbaar"/>
        </HBox>
    </VBox>
</AnchorPane>