<BorderPane fx:id="borderPaneMain" fx:controller="be.kuleuven.dbproject.controller.ProjectMainController" xmlns:fx="http://javafx.com/fxml">
    <left>
        <VBox alignment="TOP_CENTER" style="-fx-background-color: #4f46e5;" spacing="5">
            <Button fx:id="btnGames" mnemonicParsing="false" prefHeight="27.0" prefWidth="151.0" text="games" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
            <Button fx:id="btnBeheerScherm1" mnemonicParsing="false" prefHeight="27.0" prefWidth="151.0" text="Beheer Scherm 1" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
            <Button fx:id="btnBeheerScherm2" mnemonicParsing="false" prefHeight="27.0" prefWidth="151.0" text="Beheer Scherm 2" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
            <Button fx:id="adminBtn" mnemonicParsing="false" prefHeight="27.0" prefWidth="151.0" text="admin" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
            <Pane maxWidth="-Infinity" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
            <Label fx:id="naamTxt" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="achternaamTxt" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="logOutBtn" mnemonicParsing="false" style="-fx-background-color: #4f46e5;">
              <graphic>
                <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@/image/icons8-logout-50.png" />
                  </image>
                </ImageView>
              </graphic>
            </Button>
        </VBox>
    </left>
    <center>
      <VBox fx:id="childerenBox" alignment="CENTER">
        <HBox alignment="CENTER">
          <fx:include fx:id="paneHolder" style="-fx-padding: 10 40 0 40;" source="paneholder.fxml"/>
        </HBox>
      </VBox>
    </center>
</BorderPane>
