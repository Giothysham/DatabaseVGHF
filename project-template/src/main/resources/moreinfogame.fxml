<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.textfield.*?>

<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.MoreInfoGameController">
    <children>
        <VBox spacing="10" style="-fx-padding: 0 10 10 10;">
            <HBox alignment="CENTER">
                <Label fx:id="gameNameTxt" style="-fx-text-fill: #4f46e5; -fx-font-weight: bold; -fx-font-size: 40px;"/>
            </HBox>
            <HBox>
                <HBox spacing="10">
                    <Text text="console: " style="-fx-font-size: 14;"/>
                    <Text fx:id="consoleTxt" style="-fx-font-size: 14;"/>
                </HBox>
                <Pane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                <HBox spacing="10">
                    <Text text="in stock: " style="-fx-font-size: 14;"/>
                    <Text fx:id="stockTxt" style="-fx-font-size: 14;"/>
                </HBox>
                <Pane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                <HBox spacing="10">
                    <Text text="uitgever: " style="-fx-font-size: 14;"/>
                    <Text fx:id="uitgeverTxt" style="-fx-font-size: 14;"/>
                </HBox>
            </HBox>
            <HBox alignment="CENTER">
                <TextArea fx:id="moreInfoTxt" prefHeight="400.0" prefWidth="600.0"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>